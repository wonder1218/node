<% include ./header %>

    <!-- 引入 富文本编辑器 -->
    <script src="/ueditor/ueditor.config.js"></script>
    <script src="/ueditor/ueditor.all.min.js"></script>

    <!-- 路径导航 -->
    <ol class="breadcrumb">
        <li>
            <a href="#">广告管理</a>
        </li>
        <li class="active">发布广告</li>
    </ol>
    <!-- 路径导航 END -->


    <!-- 发布文章 -->
    <div class="container articleAdd">
        <div class="row">
            <form action="/ad/doadd" method="POST" enctype="multipart/form-data">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon">广告分类</span>
                        <select name="categoryId" class="form-control">
                    <!-- 循环栏目列表 -->
                    <% data.forEach(function(val){ %>
                        <option value="<%=val.id%>"><%=val.name%></option>
                    <% }) %>
                </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon">广告标题</span>
                        <input type="text" class="form-control" name="title">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon">广告封面 </span>
                        <input type="file" class="form-control" name="imgurl">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon">广告链接</span>
                        <input type="text" class="form-control" name="link">
                    </div>
                </div>
                <div class="col-md-12 content">
                    <textarea name="content" id="content"></textarea>
                </div>
                <div class="col-md-6">
                    <input class="reset" type="reset">
                </div>
                <div class="col-md-6">
                    <input class="submit" type="submit">
                </div>
            </form>
        </div>
    </div>

    <script>
        // 实例化编辑器
        var ue = UE.getEditor('content');
    </script>


    <% include ./footer %>